# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{ts,mts,js,mjs,cjs,tsx}]
indent_size = 4
max_line_length = 100
quote_type = single

[*.java]
indent_size = 4
max_line_length = 120

[*.{xml,yml,yaml}]
indent_size = 2

[Dockerfile]
indent_size = 4

[*.md]
max_line_length = 0

[*.json]
indent_size = 2

[*.sql]
indent_size = 4
max_line_length = 120

[*.puml]
indent_size = 4

[Makefile]
indent_style = tab

[*.{scss,css}]
indent_size = 2

[*.html]
indent_size = 2

# Ignore specific paths
[*.sql]
charset = unset
end_of_line = unset
indent_style = unset
indent_size = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
